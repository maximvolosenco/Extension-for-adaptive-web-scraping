{
    "manifest_version": 3,
    "name": "Adaptive",
    "description": "Extension for adaptive web scraping",
    "version": "0.0.8",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/content.js",
                "/js/FieldButtons.js",
                "/js/FieldList.js",
                "/js/StartTemplate.js",
                "/js/StartTemplateModel.js",
                "/js/TopBar.js",
                "/js/ComponentManager.js"
            ],
            "css": [
                "/css/picker.css",
                "/css/styles.css"
            ]
        }
    ],
    "permissions": [
        "activeTab", "scripting", "tabs", "storage"
    ],
    "host_permissions": [
        "*://*/*",
        "https://localhost:7000/*"
    ]
}
